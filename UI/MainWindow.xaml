<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MS KMS Activator - by 50bvd" 
        Height="820" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="White" 
        MinHeight="750" 
        MinWidth="900">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="ButtonBorder"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Name="HeaderBar" Grid.Row="0" Background="#0078D4" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="MS KMS Activator" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="v3.5" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0" Opacity="0.8"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="SettingsBtn" Style="{StaticResource SmallButton}" ToolTip="Settings">
                        <Viewbox Width="20" Height="20">
                            <Canvas Width="24" Height="24">
                                <Path Fill="White" Data="M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M10,22C9.75,22 9.54,21.82 9.5,21.58L9.13,18.93C8.5,18.68 7.96,18.34 7.44,17.94L4.95,18.95C4.73,19.03 4.46,18.95 4.34,18.73L2.34,15.27C2.21,15.05 2.27,14.78 2.46,14.63L4.57,12.97L4.5,12L4.57,11L2.46,9.37C2.27,9.22 2.21,8.95 2.34,8.73L4.34,5.27C4.46,5.05 4.73,4.96 4.95,5.05L7.44,6.05C7.96,5.66 8.5,5.32 9.13,5.07L9.5,2.42C9.54,2.18 9.75,2 10,2H14C14.25,2 14.46,2.18 14.5,2.42L14.87,5.07C15.5,5.32 16.04,5.66 16.56,6.05L19.05,5.05C19.27,4.96 19.54,5.05 19.66,5.27L21.66,8.73C21.79,8.95 21.73,9.22 21.54,9.37L19.43,11L19.5,12L19.43,13L21.54,14.63C21.73,14.78 21.79,15.05 21.66,15.27L19.66,18.73C19.54,18.95 19.27,19.04 19.05,18.95L16.56,17.95C16.04,18.34 15.5,18.68 14.87,18.93L14.5,21.58C14.46,21.82 14.25,22 14,22H10M11.25,4L10.88,6.61C9.68,6.86 8.62,7.5 7.85,8.39L5.44,7.35L4.69,8.65L6.8,10.2C6.4,11.37 6.4,12.64 6.8,13.8L4.68,15.36L5.43,16.66L7.86,15.62C8.63,16.5 9.68,17.14 10.87,17.38L11.24,20H12.76L13.13,17.39C14.32,17.14 15.37,16.5 16.14,15.62L18.57,16.66L19.32,15.36L17.2,13.81C17.6,12.64 17.6,11.37 17.2,10.2L19.31,8.65L18.56,7.35L16.15,8.39C15.38,7.5 14.32,6.86 13.12,6.62L12.75,4H11.25Z"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Name="SystemInfoCard" Grid.Row="1" Style="{StaticResource Card}" Margin="20,20,20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Name="SystemInfoText" FontSize="16" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="OS:" Foreground="#666666" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Name="VersionLabel" Foreground="#0078D4" FontWeight="SemiBold" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Edition:" Foreground="#666666" Margin="30,5,0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Name="EditionLabel" Foreground="#0078D4" FontWeight="SemiBold" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Build:" Foreground="#666666" Margin="0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Name="BuildLabel" Foreground="#666666" Margin="10,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Arch:" Foreground="#666666" Margin="30,5,0,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Name="ArchLabel" Foreground="#666666" Margin="10,5"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Border Name="StatusBadge" Background="#107C10" CornerRadius="20" Padding="15,8" Margin="20,0,0,0">
                        <TextBlock Text="Ready" Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Name="ActionCard" Grid.Column="0" Style="{StaticResource Card}" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Name="QuickActionsText" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                        
                        <Button Name="ActivateWindowsBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#0078D4" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="W" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Activate Windows" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>

                        <Button Name="ActivateOfficeBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#D83B01" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="O" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Activate Office" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>

                        <Button Name="ChangeEditionBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#107C10" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="E" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Change Edition" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>

                        <Button Name="InstallOfficeBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#8661C5" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="+" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Install Office" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>

                        <Separator Margin="0,10,0,10" Background="#E0E0E0"/>
                        <TextBlock Name="ToolsText" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,10,0,15"/>

                        <Button Name="ScheduleTaskBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#FFB900" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="T" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Schedule Auto-Renewal" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>

                        <Button Name="UninstallKeysBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#E81123" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="X" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Uninstall Keys" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>

                        <Button Name="ClearLogBtn" Style="{StaticResource ModernButton}">
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#00B7C3" CornerRadius="4" Width="32" Height="32" Margin="0,0,10,0">
                                    <TextBlock Text="C" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Clear Console" VerticalAlignment="Center" Foreground="#333333"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Name="ConsoleCard" Grid.Column="1" Style="{StaticResource Card}" Margin="10,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Name="ConsoleOutputText" FontSize="14" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,15"/>
                    
                    <Border Grid.Row="1" Background="#0A0A0A" CornerRadius="6" Padding="15">
                        <TextBox Name="LogTextBox" 
                                 Background="Transparent"
                                 Foreground="#00FF41"
                                 FontFamily="Cascadia Code, Consolas, Courier New, monospace"
                                 FontSize="11.5"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 AcceptsReturn="True"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
